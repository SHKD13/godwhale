#!/bin/sh
TMP=/tmp/bkrcmd1

echo 'beep off'  > $TMP
echo 'sendpv on' >> $TMP
echo 'book narrow' >> $TMP
echo 'resign 32599' >> $TMP
echo 'connect wdoor.c.u-tokyo.ac.jp 4081 TestWhale4 floodgate-900-0,mytrip 1' >> $TMP
#echo 'connect localhost 4081 slave1 test-0-10' >> $TMP

while :
do
    mpiexec --mca plm_base_verbose 5 \
            -host localhost       -n 1 gwx usi : \
            -host localhost       -n 1 gwx -7  : \
            -host 54.197.229.177  -n 1 gwx -8 \
	< $TMP

    sleep 10
done
